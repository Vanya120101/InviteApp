@using InviteApp.Models
@model PartyInvitation
@{
    Layout = null;
}

<html>
<head>
    <title>Thanks</title>
    <meta charset="utf-8" />
</head>
<body>
    <p>@Model.Name, thank you!</p>
    @if(@Model.WillAtend == true)
    {
        <p>I'm happy that you are coming!</p>
    }
    else
    {
        <p>I'm sad about it!</p>
    }
    <p>Click <a asp-action="ListResponses">here</a> to see who is coming</p>
</body>
</html>